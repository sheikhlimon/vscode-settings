{
  //vim keybindings
  "vim.easymotion": true,
  "vim.hlsearch": true,
  "vim.useCtrlKeys": false,
  "vim.useSystemClipboard": true,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-y>": true,
    "<C-e>": true,
    "<C-f>": true,
    "<C-b>": true,
    "<C-r>": true,
    "<C-v>": true
  },
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      //search items refreshed
      "before": [
        "<leader>",
        "f"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      // Save file
      "before": [
        "leader",
        "s"
      ],
      "commands": [
        "workbench.action.files.save"
      ]
    },
    {
      // Lookup a file in the project
      "before": [
        "<leader>",
        "t"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      //move a line down
      "before": [
        "K"
      ],
      "commands": [
        "lineBreakInsert"
      ],
      "silent": true
    },
    {
      // Move lines down by 2 instead of 1
      "before": [
        "<C-e>"
      ],
      "after": [
        "2",
        "<C-e>"
      ]
    },
    {
      // Move lines up by 2 instead of 1
      "before": [
        "<C-y>"
      ],
      "after": [
        "2",
        "<C-y>"
      ]
    }
  ],
  // Use vim hjkl to navigate folders.
  "workbench.list.keyboardNavigation": "simple",
  "workbench.list.automaticKeyboardNavigation": false,
  //editor
  "files.autoSave": "afterDelay",
  "editor.lineNumbers": "relative",
  "workbench.startupEditor": "none",
  "editor.renderWhitespace": "none",
  "editor.fontSize": 16,
  "editor.fontFamily": "Hack NF",
  "editor.fontLigatures": true,
  "editor.renderLineHighlight": "all",
  "explorer.compactFolders": false,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.organizeImports": true
  },
  "eslint.alwaysShowStatus": true,
  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmDelete": false,
  "liveServer.settings.CustomBrowser": "firefox",
  //code runner
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "c": "cd $dir && gcc $fileName -o a && .\\a",
    "cpp": "g++ $fileName -std=c++17 -Wall -o a && .\\a"
  },
  //format on save and formatter
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": null
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": null
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  //theme
  "workbench.iconTheme": "vs-nomo-dark",
  "workbench.tree.renderIndentGuides": "none",
  //c/c++ intellisence and hints after opening bracket
  // "C_Cpp.autocomplete": "Disabled",
  "editor.parameterHints.enabled": false,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": [
        "-noLogo"
      ]
    }
  },
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#FFDEAD",
    "terminalCursor.foreground": "#FFDEAD"
  },
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontFamily": "Hack NF",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.enablePersistentSessions": false,
}