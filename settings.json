{
  //vim keybindings
  "vim.useSystemClipboard": true,
  "vim.timeout": 300,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<esc>"]
    }
  ],
  "vim.useCtrlKeys": false,
  "vim.handleKeys": {
    "<C-y>": true,
    "<C-e>": true,
    "<C-f>": true,
    "<C-b>": true,
    "<C-r>": true
  },

  //vim mode viwy viewcmd+d p issue hack
  "vim.commandLineModeKeyBindingsNonRecursive": [
    {
      "before": ["p"],
      "after": ["editor.action.clipboardPasteAction"]
    }
  ],

  // Use vim hjkl to navigate folders.
  "workbench.list.keyboardNavigation": "simple",
  "workbench.list.automaticKeyboardNavigation": false,

  //editor
  "workbench.startupEditor": "none",
  "editor.renderWhitespace": "none",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.fontSize": 17,
  "editor.fontFamily": "Hack NF",
  "editor.fontLigatures": true,
  "editor.renderLineHighlight": "all",
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": false,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "files.autoSave": "afterDelay",
  "editor.bracketPairColorization.enabled": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.organizeImports": true
  },
  "eslint.alwaysShowStatus": true,
  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmDelete": false,
  "liveServer.settings.CustomBrowser": "firefox",

  //c/c++ intellisence and hints after opening bracket
  "C_Cpp.autocomplete": "Disabled",
  "editor.parameterHints.enabled": false,
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
    // "editor.quickSuggestions": false,
  },

  //powershell && terminal
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-noLogo"]
    }
  },
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#e4e4e4",
    "terminalCursor.foreground": "#32afff"
  },
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontFamily": "Hack NF",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "c": "cd $dir && gcc $fileName -o a && .\\a"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },

  //theme
  "workbench.iconTheme": "vs-nomo-dark",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.colorTheme": "Darcula"
}
